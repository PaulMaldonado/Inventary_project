<%= form_with model: @product do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@product.errors.count, "error") %> prohibited
        this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">

    <h2><%= name %> Producto</h2>
    <br><br><br>


    <div class="form-group">
      <%= form.label :code, "Código:" %>
      <%= form.number_field :code, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Descripción del producto:" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :unity, "Unidad de medida:" %>
      <%= form.text_field :unity, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :stock, "Cantidad disponible:" %>
      <%= form.number_field :stock, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :date, "Fecha de actualización:" %>
      <%= form.date_field :date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Guardar", class: "btn btn-primary" %>
    </div>

  </div>
<% end %>