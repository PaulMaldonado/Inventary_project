<div class="container">
  <h2>Productos</h2>
  <br><br>
  
  <table class="table table-striped table-dark">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Código</th>
      <th scope="col">Descripción del producto</th>
      <th scope="col">Unidad de medida</th>
      <th scope="col">Cantidad disponible</th>
      <th scope="col">Fecha actualizada</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <th scope="row">#</th>
        <td><%= product.code %></td>
        <td><%= product.description %></td>
        <td><%= product.unity %></td>
        <td><%= product.stock %></td>
        <td><%= product.date %></td>
        <td><%= link_to "Ver más..", product_path(product), class: "btn btn-primary" %></td>
        <% if user_signed_in? %>
          <td><%= link_to "Editar", edit_product_path(product), class: "btn btn-success" %></td>
          <td><%= link_to "Eliminar", product_path(product), class: "btn btn-danger", method: :delete, data: { confirm: "Seguro que decea eliminarlo? " } %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
</div>